[mysqld]
# Percona Server 主库配置 (InnoDB)
# 基本配置
port = 3306
socket = /tmp/percona-master.sock
pid-file = /tmp/percona-master.pid

# 数据目录
datadir = ./data/percona-master

# 服务器标识
server-id = 1

# 二进制日志配置
log-bin = mysql-bin
binlog-format = ROW
sync_binlog = 1
expire_logs_days = 7

# InnoDB 配置
default-storage-engine = InnoDB
innodb_buffer_pool_size = 256M
innodb_log_file_size = 64M
innodb_flush_log_at_trx_commit = 1
innodb_flush_method = O_DIRECT

# 复制配置
gtid-mode = ON
enforce-gtid-consistency = ON
log-slave-updates = ON

# 字符集
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# 网络配置
max_connections = 200
max_allowed_packet = 16M

# 安全配置
skip-name-resolve
local-infile = 0

# 性能配置
query_cache_type = 0
query_cache_size = 0
tmp_table_size = 32M
max_heap_table_size = 32M

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4