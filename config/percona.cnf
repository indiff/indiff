[mysqld]
# Percona Server 8.0 Performance Configuration for Testing

# Basic Settings
server-id = 2
port = 3306
bind-address = 0.0.0.0
skip-host-cache
skip-name-resolve

# InnoDB Settings
innodb_buffer_pool_size = 1G
innodb_log_file_size = 256M
innodb_log_buffer_size = 16M
innodb_flush_log_at_trx_commit = 1
innodb_file_per_table = 1
innodb_open_files = 4000
innodb_io_capacity = 400
innodb_io_capacity_max = 2000
innodb_read_io_threads = 8
innodb_write_io_threads = 8
innodb_thread_concurrency = 0
innodb_lock_wait_timeout = 120

# Percona-specific InnoDB optimizations
innodb_adaptive_hash_index = ON
innodb_adaptive_flushing = ON
innodb_adaptive_flushing_lwm = 10
innodb_adaptive_max_sleep_delay = 150000

# Connection Settings
max_connections = 512
max_user_connections = 450
back_log = 512
thread_cache_size = 64
table_open_cache = 4096
table_definition_cache = 2048

# Thread Pool (Percona feature)
thread_handling = pool-of-threads
thread_pool_size = 8
thread_pool_stall_limit = 10
thread_pool_max_threads = 100000

# Temporary Tables
tmp_table_size = 64M
max_heap_table_size = 64M

# MyISAM Settings
key_buffer_size = 32M
bulk_insert_buffer_size = 64M
myisam_sort_buffer_size = 128M
myisam_max_sort_file_size = 2G
myisam_repair_threads = 1

# Logging
general_log = 0
slow_query_log = 1
long_query_time = 2
log_queries_not_using_indexes = 0

# Percona Enhanced Slow Query Log
log_slow_verbosity = microtime,query_plan,innodb
slow_query_log_use_global_control = log_slow_filter
log_slow_filter = qc_miss,full_scan,full_join,tmp_table,tmp_table_on_disk,filesort,filesort_on_disk

# Binary Logging
log-bin = percona-bin
binlog_format = ROW
binlog_cache_size = 1M
expire_logs_days = 7
sync_binlog = 1

# Performance Schema
performance_schema = ON
performance-schema-consumer-events-statements-current = ON
performance-schema-consumer-events-statements-history = ON
performance-schema-consumer-events-statements-history-long = ON

# Character Set
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# SQL Mode
sql_mode = STRICT_TRANS_TABLES,NO_ZERO_DATE,NO_ZERO_IN_DATE,ERROR_FOR_DIVISION_BY_ZERO

# Percona-specific features
userstat = 1
innodb_show_verbose_locks = 1
innodb_show_locks_held = 10
innodb_print_all_deadlocks = ON

# TokuDB settings (if using TokuDB)
# tokudb_cache_size = 512M
# tokudb_commit_sync = OFF
# tokudb_directio = ON